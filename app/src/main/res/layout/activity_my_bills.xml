<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyBillsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.appcompat.widget.AppCompatImageButton

            android:id="@+id/aMyBills_btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_circle_white"
            android:src="@drawable/ic_back_24"
            android:tint="@color/main"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/arial_bold"
            android:text="Đơn mua"
            android:textColor="@color/main_text"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/aMyBills_btnBack"
            app:layout_constraintStart_toEndOf="@+id/aMyBills_btnBack"
            app:layout_constraintTop_toTopOf="@+id/aMyBills_btnBack" />

        <ImageView
            android:id="@+id/aMyBills_btnChat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_circle_white"
            android:src="@drawable/ic_chat_product"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/main" />

        <ImageView
            android:id="@+id/aMyBills_btnSearch"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_circle_white"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/aMyBills_btnChat"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/main" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintTop_toBottomOf="@+id/view12" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/aMyBills_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view13" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/aMyBills_viewPager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aMyBills_tabLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>