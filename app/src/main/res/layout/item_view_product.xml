<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemProduct_CardView"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/itemProduct_imgProduct"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:layout_constraintVertical_bias=".2"
                android:src="@drawable/product"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemProduct_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arial_extra_bold"
                android:text="$1,047"
                android:textColor="@color/second_text"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/itemProduct_imgProduct"
                app:layout_constraintTop_toBottomOf="@+id/itemProduct_imgProduct" />

            <TextView
                android:id="@+id/itemProduct_tvPriceSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_extra_bold"
                android:text="$1,047"
                android:textColor="@color/second_text"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/itemProduct_tvPrice"
                app:layout_constraintTop_toBottomOf="@+id/itemProduct_tvPrice" />

            <TextView
                android:id="@+id/itemProduct_tvNameProduct"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:paddingBottom="10dp"
                android:lineHeight="20dp"
                android:text="Đồng hồ Nữ Daniel Wellington DW00100223"
                android:textColor="@color/main_text"
                android:textSize="13sp"
                android:fontFamily="@font/arial_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/itemProduct_tvPrice" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

