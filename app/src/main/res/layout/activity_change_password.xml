<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChangePasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton

            android:id="@+id/fAChangePassword_btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_circle_white"
            android:src="@drawable/ic_back_24"
            android:tint="@color/main"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_extra_bold"
            android:text="Đổi mật khẩu"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_text"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/fAChangePassword_btnBack"
            app:layout_constraintStart_toEndOf="@+id/fAChangePassword_btnBack"
            app:layout_constraintTop_toTopOf="@+id/fAChangePassword_btnBack" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <LinearLayout
        android:id="@+id/lnPassword1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias=".04"
        app:layout_constraintWidth_percent=".9">

        <EditText
            android:id="@+id/aChangePass_edPass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/form_style_login"
            android:drawableStart="@drawable/ic_login_password"
            android:drawableRight="@drawable/ic_eye_hidden"
            android:drawablePadding="10dp"
            android:hint="Nhập mật khẩu "
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textColor="@color/main_text"
            android:textColorHint="@color/hint"
            android:textCursorDrawable="@drawable/cursor_style"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aLogin_edUserName"
            app:layout_constraintVertical_bias=".04"
            app:layout_constraintWidth_percent=".9" />

        <ImageButton
            android:id="@+id/aChangePass_imgShowP"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-60dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_eye_hidden" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnPassword11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnPassword1"
        app:layout_constraintVertical_bias=".04"
        app:layout_constraintWidth_percent=".9">

        <EditText
            android:id="@+id/aChangePass_edNewPass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/form_style_login"
            android:drawableStart="@drawable/ic_login_password"
            android:drawableRight="@drawable/ic_eye_hidden"
            android:drawablePadding="10dp"
            android:hint="Nhập mật khẩu "
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textColor="@color/main_text"
            android:textColorHint="@color/hint"
            android:textCursorDrawable="@drawable/cursor_style"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aLogin_edUserName"
            app:layout_constraintVertical_bias=".04"
            app:layout_constraintWidth_percent=".9" />

        <ImageButton
            android:id="@+id/aChangePass_imgNewShowP"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-60dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_eye_hidden" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnPassword113"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnPassword11"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".9">

        <EditText
            android:id="@+id/aChangePass_edNewPassConfirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/form_style_login"
            android:drawableStart="@drawable/ic_login_password"
            android:drawableRight="@drawable/ic_eye_hidden"
            android:drawablePadding="10dp"
            android:hint="Nhập mật khẩu "
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textColor="@color/main_text"
            android:textColorHint="@color/hint"
            android:textCursorDrawable="@drawable/cursor_style"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aLogin_edUserName"
            app:layout_constraintVertical_bias=".04"
            app:layout_constraintWidth_percent=".9" />

        <ImageButton
            android:id="@+id/aChangePass_imgNewShowPConfirm"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-60dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_eye_hidden" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aChangePass_btnOk"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_style_login"
        android:fontFamily="@font/arial_regular"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnPassword113"
        app:layout_constraintVertical_bias=".1" />

</androidx.constraintlayout.widget.ConstraintLayout>