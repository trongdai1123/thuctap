<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:paddingBottom="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial_extra_bold"
        android:text="Giới tính"
        android:layout_marginTop="15dp"

        android:textColor="@color/main_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/diaLogSex_tvMale"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Nam"
        android:fontFamily="@font/arial_bold"
        android:textColor="#7E7C7C"
        android:textSize="18sp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/diaLogSex_tvFemale"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/arial_bold"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:text="Nữ"
        android:textColor="#7E7C7C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diaLogSex_tvMale" />

    <TextView
        android:id="@+id/diaLogSex_tvLGBT"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/arial_bold"
        android:gravity="center_vertical"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:paddingStart="15dp"
        android:text="Khác"
        android:textColor="#7E7C7C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diaLogSex_tvFemale" />

</androidx.constraintlayout.widget.ConstraintLayout>