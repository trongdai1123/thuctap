<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddMyProductActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton

            android:id="@+id/aEditProduct_btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_circle_white"
            android:src="@drawable/ic_back_24"
            android:tint="@color/main"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_extra_bold"
            android:text="Thêm sản phẩm"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_text"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/aEditProduct_btnBack"
            app:layout_constraintStart_toEndOf="@+id/aEditProduct_btnBack"
            app:layout_constraintTop_toTopOf="@+id/aEditProduct_btnBack" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <ImageView
        android:id="@+id/aAddProduct_imgProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias=".02" />


    <EditText
        android:id="@+id/aAddProduct_edNameProduct"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/form_style_login"

        android:drawablePadding="10dp"
        android:hint="Nhập tên sản phẩm"
        android:maxLength="20"
        android:paddingStart="10dp"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintWidth_percent=".9" />

    <EditText
        android:id="@+id/aAddProduct_edWhereProduction"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/form_style_login"

        android:drawablePadding="10dp"
        android:hint="Nhập nơi sản xuất"
        android:maxLength="20"
        android:paddingStart="10dp"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_edNameProduct"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".9" />

    <EditText
        android:id="@+id/aAddProduct_edStage"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/form_style_login"

        android:drawablePadding="10dp"
        android:hint="Nhập tình trạng sản phẩm"
        android:maxLength="20"
        android:paddingStart="10dp"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_edWhereProduction"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".9" />

    <EditText
        android:id="@+id/aAddProduct_edWarranty"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/form_style_login"

        android:drawablePadding="10dp"
        android:hint="Nhập thời gian bảo hành"
        android:maxLength="20"
        android:paddingStart="10dp"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_edStage"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".9" />

    <EditText
        android:id="@+id/aAddProduct_edBatteryCapacity"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/form_style_login"

        android:drawablePadding="10dp"
        android:hint="Nhập dung lượng pin"
        android:maxLength="20"
        android:paddingStart="10dp"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_edWarranty"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".9" />

    <EditText
        android:id="@+id/aAddProduct_edNameColor"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/form_style_login"

        android:drawablePadding="10dp"
        android:hint="Nhập tên màu sắc"
        android:maxLength="20"
        android:paddingStart="10dp"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_edBatteryCapacity"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".9" />

    <EditText
        android:id="@+id/aAddProduct_edSale"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/form_style_login"

        android:drawablePadding="10dp"
        android:hint="Nhập khuyếtn mãi"
        android:maxLength="2"
        android:paddingStart="10dp"
        android:inputType="number"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_edNameColor"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".9" />

    <EditText
        android:id="@+id/aAddProduct_edPrice"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/form_style_login"

        android:drawablePadding="10dp"
        android:hint="Nhập giá"
        android:maxLength="20"
        android:inputType="number"
        android:paddingStart="10dp"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_edSale"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".9" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/aAddProduct_tiLNameBook"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Chọn loại sản phẩm"
        android:textColorHint="@color/second_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_edPrice"
        app:layout_constraintVertical_bias=".08"
        app:layout_constraintWidth_percent=".9">

        <AutoCompleteTextView
            android:id="@+id/aAddProduct_autoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:padding="0dp"
            android:focusable="false"
            android:inputType="phone"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aAddProduct_btnAdd"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_style_login"
        android:fontFamily="@font/arial_regular"
        android:text="Thêm"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aAddProduct_tiLNameBook"

        app:layout_constraintVertical_bias=".1"
        app:layout_constraintWidth_percent=".9" />





</androidx.constraintlayout.widget.ConstraintLayout>